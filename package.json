{
  "name": "hyperbolic",
  "version": "1.0.0",
  "private": true,
  "description": "Hyperbolic - Tricking community app monorepo",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "mobile": "turbo run dev --filter=mobile",
    "api": "turbo run dev --filter=dolos-web-service",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\""
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@10.28.1",
  "engines": {
    "node": ">=18.0.0"
  }
}